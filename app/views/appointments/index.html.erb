<p id="notice"><%= notice %></p>

<h1>My Appointments</h1>

<table>
  <thead>
    <tr>
      <th>Subject</th>
      <th>Teacher</th>
      <th>Schedule</th>
      <th>Duration</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%= appointment.section.teacher_subject.subject.name %></td>
        <td><%= appointment.section.teacher_subject.teacher.full_name %></td>
        <td>every <%= Date::DAYNAMES[appointment.section.day - 1] %> at <%= appointment.section.start_time_human %></td>
        <td><%= appointment.section.duration %> minutes</td>
        <td><%= link_to 'Show', appointment %></td>
        <td><%= link_to 'Edit', edit_appointment_path(appointment) %></td>
        <td><%= link_to 'Destroy', appointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Download", appointments_path(format: :pdf) %>

